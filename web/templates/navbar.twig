<script>
    $(document).ready(function() {
        $('html').click(function() {
            $("#builds_list").removeClass('show');
        });

        $("#btn_builds").click(function(event) {
            event.stopPropagation();
            $("#builds_list").toggleClass('show');
            $(this).toggleClass('selected');
        });

        $("#builds_list li").click(function() {
            $("#btn_builds").trigger("click");
        })
    });
</script>
