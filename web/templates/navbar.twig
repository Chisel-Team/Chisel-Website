    <a class="navbutton" id="btn_chisel" href="chisel">Chisel</a>
    <div class="dropdown" id="builds_dropdown">
        <a class="navbutton" id="btn_builds" href="#">Builds <i class="fa fa-caret-down" aria-hidden="true"></i></a>
        <ul id="builds_list">
            {% for b in branches %}
                <li><a href="builds?branch={{ b }}">{{ b }}</a></li>
            {% endfor %}
        </ul>
    </div>
